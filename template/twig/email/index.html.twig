<!doctype html>
<html {{ language_attributes()|raw }}>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="Content-Type" content="text/html; charset={{ bloginfo('charset')|esc_attr }}"/>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>{{ bloginfo('name', 'display')|raw }}</title>
</head>
<body
        {% if is_rtl %}rightmargin{% else %}leftmargin{% endif %}="0"
        marginwidth="0" topmargin="0" marginheight="0" offset="0"
>
<table width="100%" id="outer_wrapper">
    <tr>
        <td><!-- Deliberately empty to support consistent sizing and layout across multiple email clients. --></td>
        <td width="600">
            <div id="wrapper" dir="{% if is_rtl %}rtl{% else %}ltr{% endif %}">
                <table border="0" cellpadding="0" cellspacing="0" height="100%" width="100%" id="inner_wrapper">
                    <tr>
                        <td align="center" valign="top">
                            <table border="0" cellpadding="0" cellspacing="0" width="100%" id="template_container">
                                <tr>
                                    <td align="center" valign="top">
                                        <!-- Header -->
                                        <table border="0" cellpadding="0" cellspacing="0" width="100%"
                                               id="template_header">
                                            <tr>
                                                <td id="header_wrapper">
                                                    {{ logo|raw }}
                                                </td>
                                            </tr>
                                        </table>
                                        <!-- End Header -->
                                    </td>
                                </tr>
                                <tr>
                                    <td align="center" valign="top">
                                        <!-- Body -->
                                        <table border="0" cellpadding="0" cellspacing="0" width="100%"
                                               id="template_body">
                                            <tr>
                                                <td valign="top" id="body_content">
                                                    <!-- Content -->
                                                    <table border="0" cellpadding="20" cellspacing="0" width="100%">
                                                        <tr>
                                                            <td valign="top" id="body_content_inner_cell">
                                                                <div id="body_content_inner">
                                                                    {{ content|raw }}
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    </table>
                                                    <!-- End Content -->
                                                </td>
                                            </tr>
                                        </table>
                                        <!-- End Body -->
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                    <tr>
                        <td align="center" valign="top">
                            <!-- Footer -->
                            <table border="0" cellpadding="10" cellspacing="0" width="100%" id="template_footer">
                                <tr>
                                    <td valign="top">
                                        <table border="0" cellpadding="10" cellspacing="0" width="100%">
                                            <tr>
                                                <td colspan="2" valign="middle" id="credit">
                                                    {{ footer_text|raw }}
                                                </td>
                                            </tr>
                                        </table>
                                    </td>
                                </tr>
                            </table>
                            <!-- End Footer -->
                        </td>
                    </tr>
                </table>
            </div>
        </td>
        <td><!-- Deliberately empty to support consistent sizing and layout across multiple email clients. --></td>
    </tr>
</table>
</body>
</html>

